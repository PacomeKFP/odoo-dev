<odoo>
  <data>

    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="estate_account.action_window">
      <field name="name">Estate Account window</field>
      <field name="res_model">estate_account.estate_account</field>
      <field name="view_mode">tree,form</field>
    </record>


    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="estate_account.list">
      <field name="name">Estate Account list</field>
      <field name="model">estate_account.estate_account</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="value"/>
          <field name="value2"/>
        </tree>
      </field>
    </record>



    <!-- Top menu item -->

    <menuitem name="Estate Account" id="estate_account.menu_root"/>

    <!-- menu categories -->

    <menuitem name="Menu 1" id="estate_account.menu_1" parent="estate_account.menu_root"/>
    <menuitem name="Menu 2" id="estate_account.menu_2" parent="estate_account.menu_root"/>

    <!-- actions -->

    <menuitem name="List" id="estate_account.menu_1_list" parent="estate_account.menu_1"
              action="estate_account.action_window"/>


  </data>
</odoo>
