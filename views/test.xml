<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
<!--        Action liée au menu-->
       <record model="ir.actions.act_window" id="act_hr_move_view">
            <field name="name">Fiche de déplacement</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.move</field>
            <field name="binding_view_types">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="hr_move_search"/>
        </record>

<!--        La vue form-->
        <record model="ir.actions.act_window.view" id="act_hr_move_view_form">
            <field name="act_window_id" ref="act_hr_move_view"/>
            <field name="sequence" eval="20"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="hr_move_form"/>
        </record>


<!--        la vue tree-->
        <record model="ir.actions.act_window.view" id="act_hr_move_view_tree">
            <field name="act_window_id" ref="act_hr_move_view"/>
            <field name="sequence" eval="10"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="hr_move_tree"/>
        </record>


<!--        Mznu-->
        <menuitem id="menu_hr_move"
                  name="Fiche de déplacement"
                  sequence="6"
                  parent="menu_flexi_hr_move_root"
                  action="act_hr_move_view"/>





    </data>
</odoo>