<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Action for Estate Property -->
        <record id="estate_property_action" model="ir.actions.act_window">
            <field name="name">Properties</field>
            <field name="res_model">estate.property</field>
            <field name="context">{'active_test': False}</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Tree View for Estate Property -->
        <record id="estate_property_view_tree" model="ir.ui.view">
            <field name="name">estate.property.tree</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="postcode"/>
                    <field name="bedrooms"/>
                    <field name="living_area"/>
                    <field name="active"/>
                    <field name="state"/>
                    <field name="expected_price"/>
                    <field name="selling_price"/>
                    <field name="date_availability"/>

                    <field name="property_type_id"/>
                    <field name="tags_id" widget="many2many_tags"/>
                    <field name="salesperson_id"/>
                    <field name="buyer_id"/>
                </tree>
            </field>
        </record>

        <!-- Form View for Estate Property -->
        <record id="estate_property_view_form" model="ir.ui.view">
            <field name="name">estate.property.form</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <form string="Estate Property">
                    <sheet>
                        <h1>
                            <field name="name" placeholder="My New House"/>
                        </h1>
                        <field name="tags_id" widget="many2many_tags"
                               placeholder="Tags"/>
                        <group>
                            <group>

                                <field style="color:green;" name="property_type_id"/>
                                <field name="postcode" placeholder="1000"/>
                                <field name="date_availability"/>
                            </group>
                            <group>
                                <field name="expected_price"/>
                                <field name="best_price"/>
                                <field readonly="1" name="selling_price"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Description">
                                <field name="description" placeholder="Describe the property you want to rent"/>
                                <group>
                                    <group>
                                        <field name="bedrooms"/>
                                        <field name="living_area"/>
                                        <field name="facades"/>
                                        <field name="total_area"/>
                                    </group>
                                    <group>
                                        <field name="garage"/>
                                        <field name="garden"/>
                                        <field name="garden_area"/>
                                        <field name="garden_orientation" placeholder="Click to select orientation"/>
                                    </group>
                                </group>
                            </page>

                            <page string="Offers">
                                <field name="offer_ids">
                                    <tree>
                                        <field name="property_id"/>
                                        <field name="price"/>
                                        <field name="status"/>
                                        <field name="partner_id"/>
                                        <field name="date_deadline"/>
                                        <field name="validity"/>

                                    </tree>
                                </field>
                            </page>

                            <page string="Others info">
                                <group>
                                    <field name="salesperson_id" placeholder="Salesperson"/>
                                    <field name="buyer_id" placeholder="Buyer"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>


        <!-- Search View for Estate Property List -->
        <record id="view_estate_property_search" model="ir.ui.view">
            <field name="name">estate.property.search</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <search>
                    <!-- Champs de recherche -->
                    <field name="name"/>
                    <field name="postcode"/>
                    <field name="expected_price"/>
                    <field name="bedrooms"/>
                    <field name="living_area"/>
                    <field name="facades"/>

                    <!-- Filtres -->
                    <filter string="Available" name="available" domain="[('state', '=', 'new')]"/>

                    <!-- Group by options -->
                    <group expand="1" string="Group By">
                        <filter string="Postcode" name="group_by_postcode" context="{'group_by':'postcode'}"/>
                    </group>
                </search>
            </field>
        </record>
    </data>
</odoo>
