<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Collector Action  -->
        <record id="knance_collector_action" model="ir.actions.act_window">
            <field name="name">Collecteurs</field>
            <field name="res_model">knance.collector</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Collector Form View -->
        <record model="ir.ui.view" id="knance_account_view_tree">
            <field name="name">knance.collector.tree</field>
            <field name="model">knance.collector</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="work_phone"/>
                    <field name="work_email"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="knance_collector_view_form">
            <field name="name">knance.collector.form</field>
            <field name="model">knance.collector</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>

                        <h1>
                            <field name="name"/>
                        </h1>
                        <group>
                            <field name="work_phone"/>
                            <field name="work_email"/>
                        </group>

                        <notebook invisible="id==False">
                            <page string="Transactions éffectuées">
                                <field name="transaction_ids">
                                    <tree create="false" delete="false"
                                          decoration-mute="state == 'canceled'"
                                          decoration-success="transaction_type == 'deposit'"
                                          decoration-danger="transaction_type == 'withdrawal'"
                                          open_form_view="1">
                                        <field name="name"/>
                                        <field name="transaction_type"/>
                                        <field name="amount"/>
                                        <field name="state"/>
                                        <field name="customer_id"/>
                                        <field name="create_date" string="Initiée le"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <!--                        <field name="partner_id.message_follower_ids" options="{'post_refresh':True}" groups="base.group_user"/>-->
                        <!--                        <field name="partner_id.activity_ids"/>-->
                        <!--                        <field name="partner_id.message_ids"/>-->
                    </div>
                </form>
            </field>
        </record>
    </data>
</odoo>