<odoo>
    <data>

        <!-- Menu Items -->
        <menuitem id="knance_menu_root" name="Knance">
            <menuitem id="knance_customers_menu" name="Customers" action="knance_res_partner_action"/>
        </menuitem>


        <!-- Partner Tree View -->
        <record model="ir.ui.view" id="knance_res_partner_view_tree">
            <field name="name">knance.customer.tree</field>
            <field name="priority" eval="0"/>
            <field name="model">res.partner</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="street"/>
                    <field name="phone"/>
                    <field name="email"/>
                    <field name="total_balance"/>
                </tree>
            </field>
        </record>

        <!-- Partner Form View -->
        <record model="ir.ui.view" id="knance_res_partner_view_form">
            <field name="name">knance.customer.form</field>
            <field name="model">res.partner</field>
            <field name="priority" eval="0"/>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="street"/>
                                <field name="phone"/>
                            </group>
                            <group>
                                <field name="email"/>
                                <field name="total_balance"/>
                            </group>
                        </group>

                        <notebook>
                            <page string="Accounts">
                                <field name="account_ids">
                                    <tree>
                                        <field name="name"/>
                                        <field name="number"/>
                                        <field name="balance"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>


        <!-- Tree Action view -->
        <record model="ir.actions.act_window.view" id="knance_res_partner_action_view_tree">
            <field name="act_window_id" ref="knance_res_partner_action"/>
            <field name="sequence" eval="1"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="knance_res_partner_view_tree"/>
        </record>

        <!-- form Action view -->
        <record model="ir.actions.act_window.view" id="knance_res_partner_action_view_form">
            <field name="act_window_id" ref="knance_res_partner_action"/>
            <field name="sequence" eval="10"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="knance_res_partner_view_form"/>
        </record>

        <!-- Action -->
        <record model="ir.actions.act_window" id="knance_res_partner_action">
            <field name="name">Clients</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.partner</field>
            <field name="binding_view_types">tree</field>
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>
