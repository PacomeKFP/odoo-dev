<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Account Form View -->
        <record model="ir.ui.view" id="knance_account_view_form">
            <field name="name">knance.account.form</field>
            <field name="model">knance.account</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="number"/>
                            <field name="customer_id"/>
                            <field name="balance"/>
                        </group>
                        <notebook>
                            <page string="Transactions">
                                <field name="transaction_ids">
                                    <tree decoration-success="transaction_type == 'deposit'"
                                          decoration-danger="transaction_type == 'withdrawal'">
                                        <field name="transaction_type"/>
                                        <field name="amount"/>
                                        <field name="relative_amount"/>
                                        <field name="create_date"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>